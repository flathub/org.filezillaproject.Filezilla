{
    "id": "org.filezillaproject.Filezilla",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "filezilla",
    "rename-icon": "filezilla",
    "copy-icon": true,
    "rename-desktop-file": "filezilla.desktop",
    "finish-args": [
            "--share=ipc", "--socket=x11",
            "--device=dri",
            "--socket=wayland",
            "--talk-name=org.freedesktop.PowerManagement",
            "--talk-name=org.freedesktop.Notifications",
            "--talk-name=org.gnome.SessionManager",
            "--filesystem=home",
            "--share=network"
    ],
    "cleanup": [
      "/include",
      "/lib/pkgconfig",
      "/lib/*.a",
      "/lib/*.la",
      "/share/aclocal"
    ],
    "modules": [
        "shared-modules/glu/glu-9.0.0.json",
    {
        "name": "wxWidgets",
        "rm-configure": true,
        "cleanup": [
            "/bin",
            "/share/bakefile"
        ],
        "config-opts": [
            "--with-opengl", 
            "--with-libjpeg", 
            "--with-libtiff",
            "--with-libpng",
            "--with-zlib",
            "--disable-sdltest",
            "--enable-unicode",
            "--enable-display",
            "--enable-propgrid",
            "--disable-webkit",
            "--disable-webview",
            "--disable-webviewwebkit",
            "--with-expat=builtin",
            "--with-libiconv=/usr" ],
        "build-options" : {
            "cxxflags":"-std=c++0x"
        },
        "sources": [ 
            {  
                "type": "archive", 
                "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.0.3.1/wxWidgets-3.0.3.1.tar.bz2",
                "sha256":"3164ad6bc5f61c48d2185b39065ddbe44283eb834a5f62beb13f1d0923e366e4" 
            },
            {
                "type": "script",
                "path": "autogen.sh",
                "commands": [
                    "cp -p /usr/share/automake-*/config.{sub,guess} .",
                    "autoconf -f -B build/autoconf_prepend-include"
                ]
            },
            {  
                "type": "patch", 
                "path": "fix_assertion_using_hide_in_destroy.diff"
            }
        ]
    },
    {
        "name": "libfilezilla",
        "sources": [
            {
                "type": "archive",
                "url": "http://download.filezilla-project.org/libfilezilla/libfilezilla-0.12.1.tar.bz2",
                "sha256": "60efc9455e022785d432f7a76390dd2d1d92101a65aef1f176a382d604a978bd"
            }
        ]
    },
    {
        "name": "filezilla",
        "config-opts": [
            "--with-pugixml=builtin"
        ],
        "cleanup": [
          "/share/pixmaps",
          "/share/man"
        ],
        "post-install": [
            "install -t /app/share/appdata -Dm644 org.filezillaproject.Filezilla.appdata.xml",
            "rm /app/share/appdata/filezilla.appdata.xml",
            "for size in 64 128; do
              rsvg-convert -w $size -h $size -f png -o $size.png /app/share/icons/hicolor/scalable/apps/filezilla.svg
              install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/filezilla.png
            done"
        ],
        "sources": [
            {
                "type": "archive",
                "url": "https://downloads.sourceforge.net/project/filezilla/FileZilla_Client/3.31.0/FileZilla_3.31.0_src.tar.bz2",
                "sha256": "14c568b7e3331b8ae6d2371aeb4f4b43fbf97f057c0af9d75165d0d8d0d2dee5"
            },
            {
                "type": "file",
                "path": "org.filezillaproject.Filezilla.appdata.xml"
            }
        ]
    }
    ]
}
