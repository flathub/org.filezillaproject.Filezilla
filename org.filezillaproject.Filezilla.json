{
    "id": "org.filezillaproject.Filezilla",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "filezilla",
    "rename-icon": "filezilla",
    "copy-icon": true,
    "rename-desktop-file": "filezilla.desktop",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.PowerManagement",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.gnome.SessionManager",
        "--filesystem=host",
        "--share=network",
        "--socket=ssh-auth"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.a",
        "/lib/*.la",
        "/share/aclocal"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        {
            "name": "boost",
            "sources": [
                {
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6845,
                        "url-template": "https://archives.boost.io/release//$version/source/boost_${major}_${minor}_${patch}.tar.bz2"
                    },
                    "type": "archive",
                    "url": "https://archives.boost.io/release/1.89.0/source/boost_1_89_0.tar.bz2",
                    "sha256": "85a33fa22621b4f314f8e85e1a5e2a9363d22e4f4992925d4bb3bc631b5a0c7a"
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh",
                "./b2 install --prefix=/app/ variant=release link=static threading=multi --with-regex -j $FLATPAK_BUILDER_N_JOBS"
            ],
            "cleanup": [
                "/lib/",
                ""
            ]
        },
        {
            "name": "wxWidgets",
            "cleanup": [
                "/bin",
                "/share/bakefile"
            ],
            "config-opts": [
                "--with-opengl",
                "--with-libjpeg",
                "--with-libtiff",
                "--with-libpng",
                "--with-zlib",
                "--disable-sdltest",
                "--enable-unicode",
                "--enable-display",
                "--enable-propgrid",
                "--disable-webview",
                "--disable-webviewwebkit",
                "--with-expat=builtin",
                "--with-libiconv=/usr"
            ],
            "build-options": {
                "cxxflags": "-std=c++0x"
            },
            "sources": [
                {
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/wxWidgets/wxWidgets/releases/latest",
                        "version-query": ".tag_name | sub(\"^v\"; \"\")",
                        "url-query": ".assets[] | select(.name==\"wxWidgets-\" + $version + \".tar.bz2\") | .browser_download_url"
                    },
                    "type": "archive",
                    "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.2.8.1/wxWidgets-3.2.8.1.tar.bz2",
                    "sha256": "ad0cf6c18815dcf1a6a89ad3c3d21a306cd7b5d99a602f77372ef1d92cb7d756"
                }
            ]
        },
        {
            "name": "libfilezilla",
            "sources": [
                {
                    "x-checker-data": {
                        "type": "html",
                        "//": "filezilla-project.org blocks fedc user agent",
                        "url": "https://packages.debian.org/source/sid/libfilezilla",
                        "pattern": "<a href=\"(http:\/\/deb\.debian\.org\/debian\/pool\/main\/libf\/libfilezilla\/libfilezilla_([^\"]+)\.orig\.tar\.xz)\">",
                        "is-important": true
                    },
                    "type": "archive",
                    "url": "https://ftp.debian.org/debian/pool/main/libf/libfilezilla/libfilezilla_0.52.0.orig.tar.xz",
                    "sha512": "373d25bda6053667b1b2bd73359ff71fc6d45acb287712f650c07dc0a4c219a2d6ebdc614e38a767f62696c12e0cf53c8e72e5a2d72f437740373b02237cb349"
                }
            ]
        },
        {
            "name": "filezilla",
            "config-opts": [
                "--disable-autoupdatecheck",
                "--disable-manualupdatecheck",
                "--with-pugixml=builtin"
            ],
            "cleanup": [
                "/share/pixmaps",
                "/share/man"
            ],
            "post-install": [
                "install -Dm644 org.filezillaproject.Filezilla.metainfo.xml ${FLATPAK_DEST}/share/metainfo/org.filezillaproject.Filezilla.metainfo.xml",
                "rm /app/share/appdata/filezilla.appdata.xml"
            ],
            "sources": [
                {
                    "x-checker-data": {
                        "type": "html",
                        "//": "filezilla-project.org blocks fedc user agent",
                        "url": "https://packages.debian.org/source/sid/filezilla",
                        "pattern": "<a href=\"(http://deb.debian.org/debian/pool/main/f/filezilla/filezilla_([^\"]+).orig.tar.xz)\">",
                        "is-main-source": true
                    },
                    "type": "archive",
                    "url": "https://ftp.debian.org/debian/pool/main/f/filezilla/filezilla_3.69.5.orig.tar.xz",
                    "sha512": "ef31535d8c1ca21c37577f30c2960c3cddec35a993d398460f105e2c8cfecb1c517cc092ce4042e4cde49b255afdeb245db1007d88a6bfdc8901afdde991db82"
                },
                {
                    "type": "file",
                    "path": "org.filezillaproject.Filezilla.metainfo.xml"
                },
                {
                    "type": "patch",
                    "path": "0001-Correct-notification-icon-and-app-name.patch"
                },
                {
                    "type": "patch",
                    "path": "desktop-file-mime.patch"
                }
            ]
        }
    ]
}
